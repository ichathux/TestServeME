<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isurubandara.testserveme.WallActivity">

    <ImageButton
        android:id="@+id/rg_bimage"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="139dp" />

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="503dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="198dp"
            android:background="@color/common_google_signin_btn_text_light_default"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/default_profile"
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="-1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="-46dp">

            <EditText
                android:id="@+id/rg_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_weight="1"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/rg_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Last name"
                android:inputType="textPersonName"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Acount type" />

            <Spinner
                android:id="@+id/sUType"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/uType"
                tools:layout_editor_absoluteX="71dp"
                tools:layout_editor_absoluteY="-118dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/rg_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Dath of birth"
                android:inputType="date"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/rg_phone"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:ems="10"
                android:hint="Phone"
                android:inputType="phone"
                android:textAlignment="center" />
        </LinearLayout>



        <EditText
            android:id="@+id/rg_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/rg_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:ems="10"
            android:hint="About you"
            android:inputType="textMultiLine"
            android:textAlignment="center" />

        <Button
            android:id="@+id/rg_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
